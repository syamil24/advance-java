<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.maybank.dao.Person" table="Person">
        <id name="id">
            <generator class="sequence"></generator> <!-- Can be foreign, assigned, hilo algorithm -->
        </id>
        <property name="name" column="name"></property>
    </class>

</hibernate-mapping>